{
  "compilerOptions": {
    "outDir": "build/lib",
    "module": "ESNext",
    "target": "ES2018",
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "./src/**/*generated.ts"
  ],
  "include": [
    "./src"
  ]
}
